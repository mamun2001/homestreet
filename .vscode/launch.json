  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch built-in server and debug",
      "type": "php",
      "request": "launch",
      "runtimeArgs": ["spark", "serve", "-S", "localhost:8080", "-t", "."],
      "env": {
        "XDEBUG_MODE": "debug",
        "XDEBUG_SESSION": "my_project"
      },
      "externalConsole": true,
      "port": 9003,
      "serverReadyAction": {
        "action": "openExternally"
      }
    },
    {
      "name": "Debug current script in console",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "externalConsole": false,
      "port": 9003
    }
  ]
}
